local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Polar0fficial/Polar-Hub/main/Library/UI%20Datastore/ScriptSource.LS"))()
local Window = Library.CreateLib("Polar Hub", "Ocean")

-- MAIN TAB
local main = Window:NewTab("Main")


-- MAIN SCRIPTS -- SECTION
local mainScripts = main:NewSection("Main Scripts")

-- MAIN SCRIPTS
mainScripts:NewButton("WalkSpeed & JumpPower Modifier", "Opens A GUI, Which Allows You to Customly Modify Your WalkSpeed & JumpPower In-Game", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Polar0fficial/Polar-Hub/main/Main%20Tab/Main%20Script%20Section/WalkSpeed%20%26%20JumpPower%20GUI/functionScript.Loader", true))()
end)


-- MOBILE SCRIPTS -- SECTION
local mobileScripts = main:NewSection("Mobile Scripts")

-- MOBILE SCRIPTS
mobileScripts:NewButton("Keyboard Script", "Creates A Digital Keyboard On The User's Screen -- (Can Be Moved)", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Polar0fficial/Polar-Hub/main/Main%20Tab/Mobile%20Script%20Section/Keyboard%20Script/functionScript.Loader", true))()
end)



-- REMOTESPY TAB
local remoteSpy = Window:NewTab("RemoteSpy")


-- REMOTESPY -- SECTION
local remoteSpyScripts = remoteSpy:NewSection("ServerSide")


-- REMOTESPY SCRIPTS
remoteSpyScripts:NewButton("SimplySpy", "Visit The Official SimplySpy Website For More Information -- https://robloxscripts.com/simplespy-v3-simple-remote-spy/", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Polar0fficial/Polar-Hub/main/RemoteSpy%20Tab/SimplySpy/functionScript.Loader", true))()
end)



-- MISC TAB
local misc = Window:NewTab("Misc.")


-- MISCELLANEOUS -- SECTION
local miscScripts = misc:NewSection("Miscellaneous")


-- MISC SCRIPTS
miscScripts:NewButton("Time Modifier", "Sets The In-Game 'Time' Leaderstat To 99,999 -- (May Reset After Leaderstat Is Updated)", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Polar0fficial/Polar-Hub/main/Miscellaneous%20Tab/Leaderstat%20Modifiers/Time%20Modifier/conScript%20Loader", true))()
end)
